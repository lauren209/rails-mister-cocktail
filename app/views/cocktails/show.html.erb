

<div class="container">
<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |d| %>
<%= d.description %>
<p style="display: inline-block;">-------------------</p>
<%= Ingredient.all.find(d.ingredient_id).name %>

<%= link_to "remove dose", dose_path(d), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
<br>
<% end %>


<%= link_to "new dose", new_cocktail_dose_path(@cocktail.id) %>
</div>



